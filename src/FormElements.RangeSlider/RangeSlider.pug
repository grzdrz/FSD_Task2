mixin getRangeSlider(title, options, classes)
    div(class=["rangeSlider"])
        div(class=["rangeSlider__titleContainer"])
            p(class=["rangeSlider__title"])= title
            p(class=["rangeSlider__rangeValue"])= options.firstValue + " - " + options.lastValue
        div(class=["rangeSlider__sliderContainer"])
            div(class=["rangeSlider__sliderBodyEmpty"])
                div(class=["rangeSlider__sliderBodyFilled"])
            div(class=["rangeSlider__firstSlider"])
            div(class=["rangeSlider__lastSlider"])
            input(class=["rangeSlider__firstInput"] type="hidden" value= options.firstValue)
            input(class=["rangeSlider__lastInput"] type="hidden" value= options.lastValue)
            input(class=["rangeSlider__maxValueInput"] type="hidden" value= options.maxValue)
            input(class=["rangeSlider__minValueInput"] type="hidden" value= options.minValue)



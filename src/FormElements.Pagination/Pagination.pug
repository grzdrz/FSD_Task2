mixin getPagination(options, classes={})

    - if(options.title)
        p(class=["pagination__title"].concat(classes.title || []))= options.title

    div(class=["pagination__pageList"].concat(classes.pageList || []) data-cur-page-number=options.curPageNumber)
        - if(options.curPageNumber !== 1)
            a(href="#" class=["pagination__leftArrow"].concat(classes.leftArrow || []))
                p(class=["pagination__leftArrowText"].concat(classes.leftArrowText || [])) arrow_forward
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= 1                    

        - if(options.curPageNumber - 3 > 1)
            a(class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= "..." 

        - if(options.curPageNumber - 2 > 1)
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.curPageNumber - 2
        - if(options.curPageNumber - 1 > 1)
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.curPageNumber - 1

        a(href="#" class=["pagination__pageLink", "pagination__pageLink_target"].concat(classes.pageLink || []))
            p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.curPageNumber

        - if(options.curPageNumber + 1 < options.pagesCount)
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.curPageNumber + 1
        - if(options.curPageNumber + 2 < options.pagesCount)
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.curPageNumber + 2
        - if(options.curPageNumber + 3 < options.pagesCount)
            a(class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= "..." 

        - if(options.curPageNumber !== options.pagesCount)
            a(href="#" class=["pagination__pageLink"].concat(classes.pageLink || []))
                p(class=["pagination__pageLinkText"].concat(classes.pageLinkText || []))= options.pagesCount    
            a(href="#" class=["pagination__rightArrow"].concat(classes.rightArrow || []))
                p(class=["pagination__rightArrowText"].concat(classes.rightArrowText || [])) arrow_forward

    - if(options.downText)
        p(class=["pagination__downText"].concat(classes.downText || []))= options.downText                
        },


include ../FormElements.LikeButton/LikeButton.pug

mixin getGuestRoomReviews(options)
    - let classes = {};

    div(class=["guest-room-reviews"])
        p(class=["guest-room-reviews__title"]) Отзывы посетителей номера
        - for(let review of options.reviewsArray)
            div(class=["guest-room-reviews__review-container"])
                img(src=review.imgSrc class=["guest-room-reviews__user-avatar"])
                div(class=["guest-room-reviews__user-info"])
                    p(class=["guest-room-reviews__user-full-name"])= review.fullName
                    p(class=["guest-room-reviews__number-of-days-since-comment"])= review.numberOfDaysSinceComment
                +getLikeButton(review.likeButtonOptions)
                p(class=["guest-room-reviews__comment"])= review.comment
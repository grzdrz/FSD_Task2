extends ../../base/ui-kit-base

include ../../../components/form-input/form-input.pug
include ../../../components/logo/logo.pug
include ../../../components/dropdown/dropdown.pug
include ../../../components/checkbox-list/checkbox-list.pug
include ../../../components/radio/radio.pug
include ../../../components/toggle/toggle.pug
include ../../../components/star-rating/star-rating.pug
include ../../../components/button/button.pug
include ../../../components/text-button/text-button.pug
include ../../../components/bullet-list/bullet-list.pug
include ../../../components/calendar/calendar.pug
include ../../../components/like-button/like-button.pug
include ../../../components/room-advantages/room-advantages.pug
include ../../../components/room-reviews/room-reviews.pug
include ../../../components/pie-chart/pie-chart.pug
include ../../../components/range-slider/range-slider.pug

block content
    div(class=["form-elements"])
        div(class=["form-elements__column-1"])
            div(class=["form-elements__form-input-1"])
                +form-input({
                    title: "text field",
                    additionalTitle: "default",
                    placeholder: "Email",
                    name: "email",
                    type: "email",
                    value: "",
                    hasSubmitButton: false
                })
            div(class=["form-elements__form-input-2"])
                +form-input({
                    title: "text field",
                    additionalTitle: "hover / focus",
                    placeholder: "Some text",
                    name: "someText",
                    type: "text",
                    value: "This is pretty awesome",
                    hasSubmitButton: false
                })
            div(class=["form-elements__dropdown-1 js-form-elements__dropdown"]) 
                +dropdown({
                    title: "dropdown",
                    additionalTitle: "default",
                    placeholder: "dropdown",
                    name: "dropdown",
                    type: "text",
                    value: "Сколько гостей",
                    hasButtons: true,
                    withTotalValue: true,
                    list: [
                        {name: "взрослые", value: 0},
                        {name: "дети", value: 0},
                        {name: "младенцы", value: 0}
                    ],
                })
            div(class=["form-elements__calendar-1 js-form-elements__calendar"])
                +calendar({
                    isDouble: false,
                    withRange: false, 
                    firstTitle: "masked text field",
                    additionalTitle: "default",
                })
            div(class=["form-elements__calendar-2 js-form-elements__calendar"])
                +calendar({
                    isDouble: true,
                    firstTitle: "date Dropdown",
                    secondTitle: "date Dropdown",
                })
            div(class=["form-elements__calendar-3 js-form-elements__calendar"])
                +calendar({
                    isDouble: false,
                    withRange: true, 
                    firstTitle: "filter date dropdown",
                })
            div(class=["form-elements__form-input-3"])
                +form-input({
                    title: "subscription text field",
                    placeholder: "Email",
                    name: "email",
                    type: "email",
                    value: "",
                    hasSubmitButton: true
                })
        div(class=["form-elements__column-2"])
            div(class=["form-elements__checkbox-1"]) 
                +checkbox-list({
                    title: "Checkbox Buttons",
                    isExpandable: false, 
                    hasAdditionalText: false,               
                    list: [
                        {isChecked: false, text: "Можно курить"},
                        {isChecked: true, text: "Можно с питомцами"},
                        {isChecked: true, text: "Можно пригласить гостей (до 10 человек)"},
                    ],
                })
            div(class=["form-elements__radio"])
                p(class=["form-elements__radio-title"]) radio buttons 
                +radio({
                    blockNumber: 1,
                    buttonsList: [
                        {text: "Мужчина", isChecked: true},
                        {text: "Женщина", isChecked: false},
                    ],
                    name: "gender",
                })
            div(class=["form-elements__toggles"])
                p(class=["form-elements__toggle-title"]) toggle 
                div(class=["form-elements__toggle-1"])
                    +toggle({
                        text: "Получать спецпредложения",
                        isChecked: true,
                        name: "special-offer",
                    })
                div(class=["form-elements__toggle-2"]) 
                    +toggle({
                        text: "Получать спецпредложения",
                        isChecked: false,
                        name: "special-offer",
                    })
            div(class=["form-elements__like-buttons"])
                p(class=["form-elements__like-button-title"]) like button
                div(class=["form-elements__like-button-1"])
                    +like-button({
                        number: 2,
                        isChecked: false,
                    })
                div(class=["form-elements__like-button-2"])
                    +like-button({
                        number: 12,
                        isChecked: true,
                    })
            div(class=["form-elements__star-ratings"])
                p(class=["form-elements__star-rating-title"]) rate button
                div(class=["form-elements__star-rating-1"])
                    +star-rating({
                        blockNumber: 1,
                        numberOfCheckedStar: 4,
                    })
                div(class=["form-elements__star-rating-2"])
                    +star-rating({
                        blockNumber: 2,
                        numberOfCheckedStar: 5,
                    })
        div(class=["form-elements__column-3"]) 
            div(class=["form-elements__range-slider js-form-elements__range-slider"])
                +range-slider({
                    title: "range slider"
                })
            div(class=["form-elements__buttons"])
                p(class=["form-elements__buttons-title"]) buttons
                div(class=["form-elements__button-1"])
                    +button({
                        text: "click me",
                        isHollow:  false,
                        buttonType: "button",
                        hasArrow: false,
                    })
                div(class=["form-elements__button-2"])
                    +button({
                        text: "click me",
                        isHollow:  false,
                        buttonType: "button",
                        hasArrow: false,              
                    })   
                div(class=["form-elements__button-3"])
                    +button({
                        text: "click me",
                        isHollow:  true,
                        buttonType: "a",
                        hasArrow: false,               
                    })
                div(class=["form-elements__button-4"])
                    +button({
                        text: "click me",
                        isHollow:  true,
                        buttonType: "a",
                        hasArrow: false,               
                    }) 
            div(class=["form-elements__text-buttons"])
                div(class=["form-elements__button-5"])
                    +text-button({
                        text: "click me",            
                    })
                div(class=["form-elements__button-6"])
                    +text-button({
                        text: "click me",             
                    }) 
            div(class=["form-elements__button-7"])
                +button({
                    text: "перейти к оплате",
                    isHollow:  false,
                    buttonType: "submit",
                    hasArrow: true,               
                })
            div(class=["form-elements__pagination js-form-elements__pagination"])
        div(class=["form-elements__row-1"])
            div(class=["form-elements__dropdown-2-3"])
                div(class=["form-elements__dropdown-2 js-form-elements__dropdown"]) 
                    +dropdown({
                        title: "dropdown",
                        additionalTitle: "default",
                        placeholder: "dropdown",
                        name: "dropdown",
                        type: "text",
                        value: "Сколько комнат",
                        withTotalValue: false,
                        list: [
                            {name: "спальни", value: 0},
                            {name: "кровати", value: 0},
                            {name: "ванные комнаты", value: 0}
                        ],
                    }) 
                div(class=["form-elements__dropdown-3 js-form-elements__dropdown"]) 
                    +dropdown({
                        title: "dropdown",
                        additionalTitle: "expanded",
                        placeholder: "dropdown",
                        name: "dropdown",
                        type: "text",
                        value: "Сколько комнат",
                        withTotalValue: false,
                        list: [
                            {name: "спальни", value: 0},
                            {name: "кровати", value: 0},
                            {name: "ванные комнаты", value: 0}
                        ],
                    })
            div(class=["form-elements__dropdown-4 js-form-elements__dropdown"]) 
                +dropdown({
                    title: "dropdown",
                    additionalTitle: "",
                    placeholder: "dropdown",
                    name: "dropdown",
                    type: "text",
                    value: "Сколько гостей",
                    hasButtons: true,
                    withTotalValue: true,
                    list: [
                        {name: "взрослые", value: 0},
                        {name: "дети", value: 0},
                        {name: "младенцы", value: 0}
                    ],
                })
            div(class=["form-elements__dropdown-5 js-form-elements__dropdown"]) 
                +dropdown({
                    title: "dropdown",
                    additionalTitle: "",
                    placeholder: "dropdown",
                    name: "dropdown",
                    type: "text",
                    value: "Сколько гостей",
                    hasButtons: true,
                    withTotalValue: true,
                    list: [
                        {name: "взрослые", value: 0},
                        {name: "дети", value: 0},
                        {name: "младенцы", value: 0}
                    ],
                })
        div(class=["form-elements__row-2"])
            div(class=["form-elements__checkbox-2-3"])
                div(class=["form-elements__checkbox-2 js-form-elements__checkbox_expandable"]) 
                    +checkbox-list({
                        title: "expandable checkbox list",
                        isExpandable: true,
                        isOpened: "true",
                        hasAdditionalText: false,
                        list : [
                            {isChecked: false, text: "Завтрак"},
                            {isChecked: true, text: "Письменный стол"}, 
                            {isChecked: true, text: "Стул для кормления"},
                            {isChecked: true, text: "Кроватка"},
                            {isChecked: false, text: "Телевизор"},
                            {isChecked: false, text: "Шампунь"},
                            {isChecked: false, text: "Телевизор"},
                            {isChecked: false, text: "Шампунь"}
                        ],
                    })
                div(class=["form-elements__checkbox-3 js-form-elements__checkbox_expandable"]) 
                    +checkbox-list({
                        title: "expandable checkbox list",
                        isExpandable: true,
                        isOpened: "true",
                        hasAdditionalText: false,
                        list : [
                            {isChecked: false, text: "Завтрак"},
                            {isChecked: true, text: "Письменный стол"}, 
                            {isChecked: true, text: "Стул для кормления"},
                            {isChecked: true, text: "Кроватка"},
                            {isChecked: false, text: "Телевизор"},
                            {isChecked: false, text: "Шампунь"},
                            {isChecked: false, text: "Телевизор"},
                            {isChecked: false, text: "Шампунь"}
                        ],
                    })
            div(class=["form-elements__checkbox-4"]) 
                +checkbox-list({
                    title: "rich Checkbox Buttons",
                    isExpandable: false,
                    hasAdditionalText: true,
                    list: [
                        {isChecked: false, text: "Широкий коридор", additionalText: "Ширина коридоров в номере не менее 91 см."},
                        {isChecked: true, text: "Помощник для инвалидов", additionalText: "На 1 этаже вас встретит специалист и проводит до номера."},
                    ],
                })
            div(class=["form-elements__bullet-list"])
                p(class=["form-elements__bullet-list-title"]) bullet list
                +bullet-list({
                    list: [
                        "Нельзя с питомцами",
                        "Без вечеринок и мероприятий",
                        "Время прибытия — после 13:00, а выезд до 12:00",
                    ],
                })
        div(class=["form-elements__row-3"])
            div(class=["form-elements__room-advantages"])
                +room-advantages({
                    details: [
                        {icon: "insert_emoticon", titleText: "Комфорт", mainText: "Шумопоглощающие стены",},
                        {icon: "location_city", titleText: "Удобство", mainText: "Окно в каждой из спален",},
                    ],
                    hasLastBorderBottom: false,
                })
            div(class=["form-elements__guest-room-reviews"])
                +room-reviews({
                    hasTitle: false,
                    reviews: [
                        {
                            imageName: "avatar-murat-sarafanof",
                            fullName: "Мурад Сарафанов",
                            numberOfDaysSinceComment: "5 дней назад",
                            likeButtonOptions: {
                                number: 12,
                                isChecked: true,
                            },
                            comment: `Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. 

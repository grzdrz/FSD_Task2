include ../../../components/logo/logo.pug
include ../../../components/sign-in-form/sign-in-form.pug
include ../../../components/find-room-form/find-room-form.pug
include ../../../components/price-calculation-form/price-calculation-form.pug
include ../../../components/sign-up-form/sign-up-form.pug
include ../../../components/room-info/room-info.pug

doctype html
html
    head
        meta(charset="utf-8")
        title Cards
        meta(name="viewport" content="width=device-width")          
    body
        div(class=["cards"])
            div(class=["cards__global-logo-container"])
                +logo()

            div(class=["cards__content"])
                div(class=["cards__column-1"])
                    div(class=["cards__form-container-1"])
                        +find-room-form({
                            titleText: "Найдём номера под ваши пожелания",
                        })
                    div(class=["cards__form-container-2"])        
                        +sign-up-form({
                            titleText: "Регистрация аккаунта",
                        })                        
                div(class=["cards__column-2"])
                    div(class=["cards__form-container-3"])
                        +price-calculation-form({
                            roomNumber: 888,
                            roomStatus: "люкс",
                            roomPrice: 9990,
                            currencyType: "₽",
                            discount: 2179,
                        })
                    div(class=["cards__form-container-4"])
                        +sign-in-form({
                            titleText: "Войти",
                        })
                div(class=["cards__column-3"])
                    div(class=["cards__date-picker-container"])

                    div(class=["cards__room-info-container cards__room-info-container-1"])
                        +room-info({
                            blockNumber: 1,
                            photos: ["test11", "test22", "test33", "test44"],
                            reviewsCount: 145,
                            numberOfCheckedStar: 1,
                            url: "#",
                            roomNumber: 888,
                            roomStatus: "люкс",
                            roomPrice: 9990,
                            currencyType: "₽",
                        })
                    div(class=["cards__room-info-container cards__room-info-container-2"])
                        +room-info({
                            blockNumber: 2,
                            photos: ["test11", "test22"],
                            reviewsCount: 65,
                            numberOfCheckedStar: 5,
                            url: "#",
                            roomNumber: 888,
                            roomStatus: "люкс",
                            roomPrice: 9990,
                            currencyType: "₽",
                        }) 
                    div(class=["cards__room-info-container cards__room-info-container-3"])
                        +room-info({
                            blockNumber: 3,
                            photos: ["test11"],
                            reviewsCount: 1488,
                            numberOfCheckedStar: 3,
                            url: "#",
                            roomNumber: 888,
                            roomStatus: "люкс",
                            roomPrice: 9990,
                            currencyType: "₽",
                        })                          


doctype html
html
    head
        meta(charset="utf-8")
        title HeadersAndFooters
        meta(name="viewport" content="width=device-width")
    body
        div(class=["headersAndFooters"])

            div(class=["headersAndFooters__global-logo-container"])
                include ../GlobalLogo/GlobalLogo.pug

            include ../HeadersAndFooters.StandardNavBar/StandardNavBar.pug
            div(class=["headersAndFooters__standard-nav-bar-container_first"])
                +getStandardNavBar({
                    isAuthorized: false,
                })

            div(class=["headersAndFooters__standard-nav-bar-container_second"])
                +getStandardNavBar({
                    isAuthorized: true,
                    userFullName: "Юлий Цезарь",
                })

            include ../HeadersAndFooters.FooterWidgetsAndCopyrightBar/FooterWidgetsAndCopyrightBar.pug
            div(class=["headersAndFooters__footer-widgets-and-copyright-bar-container"])
                +getFooterWidgetsAndCopyrightBar()

            div(class=["headersAndFooters__footer-creative-container"])
                include ../HeadersAndFooters.FooterCreative/FooterCreative.pug
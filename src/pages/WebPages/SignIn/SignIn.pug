include ../../../components/HeadersAndFooters.StandardNavBar/StandardNavBar.pug
include ../../../components/Cards.AuthorizationForm/AuthorizationForm.pug
include ../../../components/HeadersAndFooters.LongFooter/LongFooter.pug

doctype html
html
    head
        meta(charset="utf-8")
        title SignIn
        meta(name="viewport" content="width=device-width")
    body
        div(class=["sign-in"])
            div(class=["sign-in__header-container"])
                +getStandardNavBar({
                    isAuthorized: false,
                })

            div(class=["sign-in__main-content"])
                div(class=["sign-in__form-container"])  
                    +getAuthorizationForm({
                        titleText: "Войти",
                    })
                div(class=["sign-in__background-image-container"])
                    img(class=["sign-in__background-image"] src="./src/pages/WebPages/SignIn/img/backgroundImage.png")

            div(class=["sign-in__footer-container"])
                +getLongFooter()
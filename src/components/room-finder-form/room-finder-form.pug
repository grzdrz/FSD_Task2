include ../calendar/calendar.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin room-finder-form(options = {})
  - const { title = "" } = options;

  form(class=["room-finder-form", "js-room-finder-form"])
    - if(title)
      p(class=["room-finder-form__title"])= title
    div(class=["room-finder-form__calendar", "js-room-finder-form__calendar"])
      +calendar({
        isDouble: true,
        firstTitle: "прибытие",
        secondTitle: "выезд",
      })
    div(class=["room-finder-form__dropdown", "js-room-finder-form__dropdown"])
      +dropdown({
        title: "гости",
        placeholder: "Сколько гостей",
        name: "guestsCount",
        type: "text",
        hasButtons: true,
        defaultText: "Сколько гостей",
        list: [
          {names: ["взрослые"], value: 0, isCommon: true},
          {names: ["дети"], value: 0, isCommon: true},
          {names: ["младенец", "младенца", "младенцев", "младенцы"], value: 0, isCommon: false}
        ],
        commonNames: ["гость", "гостя", "гостей"],
      })
    div(class=["room-finder-form__submit-button"])
      +button({
        text: "подобрать номер",
        isHollow: false,
        basis: "button",
        buttonType: "submit",
        hasArrow: true,
      })
include ../FormElements.ButtonDefault/ButtonDefault.pug
include ../FormElements.DateInput/DateInput.pug
include ../Cards.RoomInfoTitle/RoomInfoTitle.pug
include ../FormElements.Dropdown/Dropdown.pug

mixin getPriceCalculationForm(options)
    - 
        const {
            roomNumber,
            roomStatus,
            roomPrice,
            currencyType,
            periodOfTime,
            discount,
        } = options;

    form(class=["price-calculation-form"])

        div(class=["price-calculation-form__title-container"])
            +getRoomInfoTitle({
                roomNumber: 888,
                roomStatus: "люкс",
                roomPrice: "9 990₽",
                periodOfTime: "сутки",
            })

        div(class=["price-calculation-form__date-input-container"])
            +getDateInput({
                isDouble: true,
                firstTitle: "выезд",
                secondTitle: "прибытие",
            })

        div(class=["price-calculation-form__dropdown-container"])
            +getDropdown({
                titleText: "гости",
                isTitleTextTestVisible: false,
                titleTextTestValue: "",
                placeholder: "Сколько гостей",
                name: "guestsCount",
                type: "text",
                value: "Сколько гостей",
                dropdownList: [
                    {name: "взрослые", value: 0},
                    {name: "дети", value: 0},
                    {name: "младенцы", value: 0}
                ],
                withTotalValue: true,
            })  

        div(class=["price-calculation-form__calculated-data"])
            p(class=["price-calculation-form__main-sum"] data-value=roomPrice data-currency-type=currencyType)
                span(class=["price-calculation-form__main-sum-formula"])= `${roomPrice}${currencyType} x 0 суток`
                span(class=["price-calculation-form__main-sum-result"])= `${roomPrice}${currencyType}`
            p(class=["price-calculation-form__services"] data-value=discount)
                span(class=["price-calculation-form__discount-description"])= `Сбор за услуги: скидка ${discount}${currencyType}`
                span(class=["price-calculation-form__services-tooltip", "price-calculation-form__discount-tooltip"]) i
                span(class=["price-calculation-form__discount-value"])= `0${currencyType}`
                span(class=["price-calculation-form__additional-services-description"]) Сбор за дополнительные услуги
                span(class=["price-calculation-form__services-tooltip", "price-calculation-form__additional-services-tooltip"]) i                
                span(class=["price-calculation-form__additional-services-value"])= `0${currencyType}`
            p(class=["price-calculation-form__total-result"] data-value=0)
                span(class=["price-calculation-form__total-result-text"]) Итого
                span(class=["price-calculation-form__total-result-bottom-line"])
                span(class=["price-calculation-form__total-result-value"])= `0${currencyType}`

        div(class=["price-calculation-form__submit-button-container"])
            +getButton({
                text: 'забронировать',
                isHollow: false,
                buttonType: "submit",
                hasArrow: true,
            })


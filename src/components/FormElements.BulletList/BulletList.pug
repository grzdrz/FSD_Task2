//-
    list - массив строк элементов списка
    titleText - текст заголовка

mixin getBulletList(options)
    - const {inRoomDetailsPage, titleText, list} = options;
    - const titleTextClasses = [];

    - if(inRoomDetailsPage){
        - titleTextClasses.push("bullet-list__title-text_with-font-family_quicksand");
    - }

    div(class=["bullet-list"])
        - if(titleText)
            div(class=["bullet-list__title"])
                p(class=["bullet-list__title-text"].concat(titleTextClasses || []))= titleText
        ul(class=["bullet-list__list"])    
            - for(let listItem of list)
                li(class=["bullet-list__list-item"])
                    div(class=["bullet-list__list-item-marker"])
                    p(class=["bullet-list__list-item-text"])= listItem

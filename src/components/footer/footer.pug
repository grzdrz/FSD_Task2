include ../menu-bar/menu-bar.pug
include ../form-input/form-input.pug
include ../colored-logo/colored-logo.pug
include ../social-media/social-media.pug

mixin footer(options = {})
  footer(class=["footer"])
    div(class=["footer__info-bar"])
      div(class=["footer__general-info"])
        +colored-logo()
        p(class=["footer__general-info-text"]) 
          | Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      nav(class=["footer__menu-bar"])
        +menu-bar()
      nav(class=["footer__menu-bar"])
        +menu-bar({
          refs: [
            {url: "https://error.com", isOuter: true, text: "о нас"}, 
            {url: "https://error.com", isOuter: true, text: "О сервисе"}, 
            {url: "https://error.com", isOuter: true, text: "Наша команда"}, 
            {url: "https://error.com", isOuter: true, text: "Вакансии"}, 
            {url: "https://error.com", isOuter: true, text: "Инвесторы"},
          ]
        })
      nav(class=["footer__menu-bar"])
        +menu-bar({
          refs: [
            {url: "https://error.com", isOuter: true, text: "Служба поддержки"}, 
            {url: "https://error.com", isOuter: true, text: "Соглашения"}, 
            {url: "https://error.com", isOuter: true, text: "Сообщества"},
            {url: "https://error.com", isOuter: true, text: "Связь с нами"},
          ]
        })           
      div(class=["footer__subscription"])
        p(class=["footer__subscription-title"]) Подписка
        p(class=["footer__subscription-description"]) 
          | Получайте специальные предложения и новости сервиса
        form(class=["footer__subscription-form"])
          +form-input({
            hasTitle: false,
            isTitleTextTestVisible: false,
            placeholder: "Email",
            name: "email",
            type: "email",
            value: "",
            hasSubmitButton: true
          })
    div(class=["footer__copyright-bar"])
      p(class=["footer__copyright"]) 
        | Copyright © 2018 Toxin отель. Все права зачищены.
      +social-media()
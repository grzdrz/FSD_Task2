//-
    placeholder - фоновый текст в инпуте
    name - имя свойства в которое будет положено значение инпута при отправке на сервер
    type - тип инпута
    value - значение инпута по умолчанию
    titleText - текст заголовка
    isTitleTextTestVisible - определяет дополнительный заголовок(используется только на странице макета uikit)
    titleTextTestValue - текст дополнительного заголовка
    hasSubmitButton - встроена ли справо от инпута submit кнопка(цветная стрелка вправо)

mixin getFormInput(options)
    - 
        const {
            hasTitle,
            titleText,
            isTitleTextTestVisible, 
            titleTextTestValue,
            placeholder, 
            name, 
            type,
            value, 
            hasSubmitButton
        } = options;

    div(class=["form-input"])
        - if(hasTitle)
            div(class=["form-input__title"])
                p(class=["form-input__title-text"])= titleText
                - if(isTitleTextTestVisible)
                    p(class=["form-input__additional-title-text"])= titleTextTestValue

        div(class=["form-input__input-container"])
            input(class=["form-input__input"],
                placeholder= placeholder,
                name= name,
                type= type,
                value= value)
            - if(hasSubmitButton)
                input(class=['form-input__submit-input']
                    type="submit"
                    value="arrow_forward")
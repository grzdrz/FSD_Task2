mixin calendar(options = {})
    -
        const {
            firstTitle = "",
            secondTitle = "",
            additionalTitle = "",
            isDouble = false,
            withRange = false,
        } = options;
        const containerClasses = [];
        const inputContainerClasses = [];

        if(withRange || isDouble)
            containerClasses.push("js-calendar_with-range-picking");
        if(isDouble) {
            containerClasses.push("js-calendar_double");
            inputContainerClasses.push("calendar__input-container_date_from");
        }


    div(class=["calendar", "js-calendar"].concat(containerClasses))
        div(class=["calendar__input-container"].concat(inputContainerClasses))
            p(class=["calendar__title"])
                span(class=["calendar__title-text"])= firstTitle
                - if(additionalTitle)
                    span(class=["calendar__additional-title-text"])= additionalTitle
            label(class=["calendar__label", "calendar__label_date_from"])
                input(class=["calendar__input", "calendar__input_date_from", "js-calendar__input"] 
                    type="text" 
                    name="date_from" 
                    placeholder="ДД.ММ.ГГГГ"
                    readonly=true)
                p(class=["calendar__dropdown-arrow"]) expand_more
        - if(isDouble)                
            div(class=["calendar__input-container", "calendar__input-container_date_to"])
                p(class=["calendar__title"])
                    span(class=["calendar__title-text"])= secondTitle
                label(class=["calendar__label", "calendar__label_date_to"])
                    input(class=["calendar__input", "calendar__input_date_to", "js-calendar__input"]  
                        type="text" 
                        name="date_to"
                        placeholder="ДД.ММ.ГГГГ"
                        readonly=true)
                    p(class=["calendar__dropdown-arrow"]) expand_more                  

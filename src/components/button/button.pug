mixin button(options = {})
  - 
    const { 
      isHollow = false,
      hasArrow = false,
      basis = "a",
      text = "click me",
      url = "https://error.com/",
      isOuterRef = true,
      isForHeader = false,
      buttonType = "button",
    } = options;
    const containerClasses = (isHollow ? ["button_hollow"] : []);
    const textClasses = (hasArrow ? ["button__text_with-arrow"] : []);

  div(class=['button'].concat(containerClasses))
    div(class='button__background')
    - if(basis === "a" && isOuterRef)
      a(class=["button__basis"] href=url target="_blank" rel="noopener noreferrer")
        - if(hasArrow)
          span(class=["button__arrow"]) arrow_forward
        span(class=["button__text"].concat(textClasses))= text
    - else if(basis === "a" && !isOuterRef)
      a(class=["button__basis"] href=url)
        - if(hasArrow)
          span(class=["button__arrow"]) arrow_forward
        span(class=["button__text"].concat(textClasses))= text
    - else
      button(class=["button__basis"].concat(containerClasses) type=buttonType)
        - if(hasArrow)
          span(class=["button__arrow"]) arrow_forward
        span(class=["button__text"].concat(textClasses))= text